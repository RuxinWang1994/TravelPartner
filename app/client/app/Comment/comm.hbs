<link rel="stylesheet" href="/Comment/css/formstyle.css" />

<div id ="TG">
</div>
<div class="container">
    <div class="jumbotron">
        <h1> Comments</h1> <!-- <i class="fa fa-camera-retro"></i> -->
        <p>A bunch of travel guides give useful recommendations for you!</p>
    </div>




<table class="table table-hover">
    <tbody>
        {{#each comment}}
        <tr>
            <td>
                <h4><a class="text-info" href={{url}} target="_blank" style="color:#5c8cd5">{{title}}</h4></a>

                <div >
                    {{#each keyword}}
                    <code style="color:#5c8cd5">{{this}}</code>
                    {{/each}}
                </div>
            </td>
            <td>
                <img class="img-circle" src={{userImg}} height="50" width="50" >
            </td>
            <td>
                <h4>{{author}}</h4>
                 <div style="float: left;">{{modified_at}}</div>
            </td>
            <td>
                <h4>{{votes}}</h4>
                VOTES
            </td>

            <td>
                <h4>{{views}}</h4>
                VIEWS
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<button id="write" onClick="location.href='{{create}}'"  class="btn btn-primary" >Write a comment!</button>

<!--<button onclick="window.location='file:///Users/xiaohanzhang/Desktop/syr2018spring/686/TP/TravelPartner/app/client/app/TG/Write.html '"  class="btn btn-success" >Write a Guide!</button>-->
<button onclick="topFunction()" id="myBtn" type="button" class="btn btn-primary" style="position: fixed; bottom: 20px;right: 30px;">Top</button>
 </div>
<script>
    window.onscroll = function() {scrollFunction()};

    $(document).ready(function() {
      $('#write')
        .click(function(){
          if (localStorage.getItem('token')==null) {
        $('#sign-in-modal').modal('show');
            return false;
          }
          var url = $('#canwrite').val();
          location.href(url);
          return true;
      });
    });

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            document.getElementById("myBtn").style.display = "block";
        } else {
            document.getElementById("myBtn").style.display = "none";
        }
    }

    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }

</script>



